{
  "name": "api",
  "version": "1.1.0",
  "main": "dist/index.js",
  "repository": "https://github.com/Kyxey/xcoins-be-test",
  "author": "Ali Azizjahan",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "joi": "^17.5.0",
    "mongoose": "^6.1.1",
    "nodemon": "^2.0.7",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "seed": "ts-node-dev src/scripts/seed.ts",
    "start": "node dist/index.js",
    "build": "yarn test && tsc -b",
    "format": "prettier -w ./src/",
    "test": "cross-env NODE_ENV=test yarn seed && cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test yarn seed && jest --watch",
    "release": "standard-version",
    "release:major": "yarn release --release-as major",
    "release:minor": "yarn release --release-as minor",
    "release:patch": "yarn release --release-as patch",
    "prestart": "yarn build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.11.12",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*./src/": "prettier --write"
  }
}
